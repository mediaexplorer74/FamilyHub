             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="FamilyAgenda.Views.LoginPage"
             Shell.NavBarIsVisible="False" 
             Shell.FlyoutBehavior="Disabled"
             Shell.PresentationMode="ModalAnimated"
             Visual="Material">

